/* pages/add/add.wxss */
.content{
    width: 100%;
}
.header{
    width: 100%;
    height: 170rpx;
    background-color: #424c50;
    color: #fff;
    font-size: 20px;
}
.header-btn{
    display: inline-flex;
    width: 60%;
    margin: 50rpx 20% 0 20%;
}
.header-btn view{
    text-align: center;
    width: 50%;
    line-height: 30px;
    font-size: 12px;
    border: 1px #fff solid;
}
.btnActive{
    background-color: #fff;
    color: #424c50
}
.add-list{
    padding: 15% 10%;
}
.account{
    width: 100%;
    display: inline-flex;
    height: 100rpx;
    margin-top: 10%;
    border: 1px solid #efefef;
    line-height: 100rpx;
}
.tap{
    width: 30%;
    height: 100%;
    font-size: 14px;
    text-align: center;
    border-right: 1px solid #efefef;
    color: #424c50;
}
.account input{
    width: 70%;
    height: 100%;
    font-size: 14px;
    padding-left: 5%;
}
.pick{
    width: 70%;
    padding-left: 5%;
}
.picker{
    color: #424c50;
    font-size: 14px;
}
.account button{
    width: 100%;
}