/**index.wxss**/
.top{
  height: 290rpx;
  width: 100%;
  color: #fff;
  background-color: #424c50;
}
.top-budget{
  margin-left: 5%;
  font-size: 16px;
}
.top-number{
  margin: 20rpx 10%;
  height: 90rpx;
  line-height: 90rpx;
  width: 80%;
  color: #fff;
  font-size:40px;
  text-align: center;
  overflow: hidden;
}
.yuan{
  padding-left:5%;
  font-size: 25px;
}
.top-progress{
  padding: 20rpx 0 0 90rpx;
}
.tapy{
  width: 100%;
  background-color: #efefef;
  font-size: 12px;
  line-height: 60rpx;
  color: #424c50;
  display: inline-flex;
}
.list-content{
  width: 100%;
  height: 800rpx;
  overflow: hidden;
  background-color: #fff;
}
.recording{
  width: 100%;
  height: 80rpx;
  overflow: hidden;
  line-height: 80rpx;
  background-color: #fff;
  border-bottom: 1px #efefef solid;
}
.account-list{
  color: #424c50;
  font-size: 12px;
  display: inline-block;
  width: 100%;
  overflow: hidden;
}
.account-list-time{
  padding:0 5%;
  width: 20%;
}
.account-list-detail{
  padding:0 5%;
  width: 30%;
  overflow: hidden;
}
.account-list-amount{
  width: 20%;
  text-align: right;
  padding:0 5%;
  overflow: hidden;
}
.account-list-del{
  height: 80rpx;
  width: 18%;
  text-align: center;
}
.account-list-del-button{
  height: 60rpx;
  margin-top:10rpx;
}
/**/
.floot{
  position: absolute;
  bottom:0;
  width: 60%;
  padding: 0 20%;
  height: 85rpx;
  background-color: #fff;
  display: inline-flex;
}
.floot view{
  width: 50%;
  line-height: 75rpx;
  height: 75rpx;
  text-align: center;
  color: #fff;
  font-size: 14px;
  background: #424c50;
}